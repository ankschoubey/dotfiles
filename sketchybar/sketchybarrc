# A simple sketchybar config for aerospace users to get started with
# Not too different from the base starting config!

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
# Configuring the general appearance of the bar.
# These are only some of the options available. For all options see:
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

# Color Palette (Catppuccin Mocha)
BASE=0xff1e1e2e
MANTLE=0xff181825
CRUST=0xff11111b
TEXT=0xffcdd6f4
SUBTEXT0=0xffa6adc8
SUBTEXT1=0xffbac2de
SURFACE0=0xff313244
SURFACE1=0xff45475a
SURFACE2=0xff585b70
OVERLAY0=0xff6c7086
OVERLAY1=0xff7f849c
OVERLAY2=0xff9399b2
BLUE=0xff89b4fa
LAVENDER=0xffb4befe
SAPPHIRE=0xff74c7ec
SKY=0xff89dceb
TEAL=0xff94e2d5
GREEN=0xffa6e3a1
YELLOW=0xfff9e2af
PEACH=0xfffab387
MAROON=0xffeba0ac
RED=0xfff38ba8
MAUVE=0xffcba6f7
PINK=0xfff5c2e7
FLAMINGO=0xfff2cdcd
ROSEWATER=0xfff5e0dc
TRANSPARENT=0x00000000

# Bar and item styling
sketchybar --bar position=top \
                height=32 \
                color=0x00000000 \
                blur_radius=00 \
                shadow=on \
                corner_radius=13 \
                border_width=0 \
                margin=0 \
                y_offset=0 \




##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items

default=(
  padding_left=5
  padding_right=5
  icon.font="FiraCode Nerd Font:Bold:17.0"
  label.font="SF Pro:Semibold:17.0"
  icon.color=$TEXT
  label.color=$TEXT
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=5
  updates=on
)
sketchybar --default "${default[@]}"

##### Adding aeropsace layouts #####

# Add the aerospace_workspace_change event we specified in aerospace.toml
sketchybar --add event aerospace_workspace_change

# This only works for single monitor configs!
for sid in $(aerospace list-workspaces --all); do
  #for sid in "${SPACE_IDS[@]}"; do
  sketchybar --add item space.$sid left \
    --subscribe space.$sid aerospace_workspace_change \
    --set space.$sid \
    drawing=off \
    background.color=$SURFACE1 \
    background.corner_radius=0 \
    background.drawing=on \
    background.border_color=$PEACH \
    background.border_width=0 \
    background.height=32 \
    icon="$sid" \
    icon.padding_left=10 \
    icon.shadow.distance=4 \
    icon.shadow.color=$OVERLAY0 \
    label.font="sketchybar-app-font:Regular:16.0" \
    label.padding_right=20 \
    label.padding_left=0 \
    label.y_offset=-1 \
    label.shadow.drawing=off \
    label.shadow.color=$OVERLAY0 \
    label.shadow.distance=4 \
    click_script="aerospace workspace $sid" \
    script="$CONFIG_DIR/plugins/aerospace.sh $sid"
done

# Load Icons on startup
for sid in $(aerospace list-workspaces --all --empty no); do
  apps=$(aerospace list-windows --workspace "$sid" | awk -F'|' '{gsub(/^ *| *$/, "", $2); print $2}')

  sketchybar --set space.$sid drawing=on

  icon_strip=" "
  if [ "${apps}" != "" ]; then
    while read -r app; do
      icon_strip+=" $($CONFIG_DIR/plugins/icon_map_fn.sh "$app")"
    done <<<"${apps}"
  else
    icon_strip=""
  fi
  sketchybar --set space.$sid label="$icon_strip"
done


sketchybar --add item space_separator left \
  --set space_separator icon="→" \
  icon.padding_left=4 \
  icon.color=$GREEN \
  label.drawing=off \
  background.drawing=off \
  script="$PLUGIN_DIR/space_windows.sh" \
  --subscribe space_separator aerospace_workspace_change front_app_switched space_windows_change

# Front app!!
sketchybar --add item front_app left \
  --set front_app icon.drawing=on \
  background.color=$GREEN \
  background.drawing=on \
  background.height=32 \
  background.corner_radius=0 \
  icon.color=$CRUST \
  label.color=$CRUST \
  icon.font="sketchybar-app-font:Regular:16.0" \
  script="$PLUGIN_DIR/front_app.sh" \
  --subscribe front_app front_app_switched

sketchybar --add item front_app_context_separator left \
  --set front_app_context_separator icon="|" \
  icon.color=$OVERLAY0 \
  label.drawing=off \
  background.drawing=off

sketchybar --add item context_main right \
            --set context_main script="$DOTFILES_ROOT/sketchybar/plugins/context.sh" \
                          icon.drawing=off \
                          label.drawing=on \
                          background.drawing=on \
                          background.color=$SURFACE1 \
                          background.corner_radius=0 \
                          background.height=32 \
                          icon.color=$TEXT \
                          icon.padding_left=10 \
                          label.color=$TEXT \
                          label.padding_right=10 \
                          icon.font="FiraCode Nerd Font:Regular:16.0" \
                          label.y_offset=-1 \
                          drawing=off \
            --subscribe context_main aerospace_workspace_change

sketchybar --add item context_secondary center \
            --set context_secondary script="$DOTFILES_ROOT/sketchybar/plugins/context.sh" \
                          icon.drawing=off \
                          label.drawing=on \
                          background.drawing=on \
                          background.color=$SURFACE1 \
                          background.corner_radius=0 \
                          background.height=32 \
                          icon.color=$TEXT \
                          icon.padding_left=10 \
                          label.color=$TEXT \
                          label.padding_right=10 \
                          icon.font="FiraCode Nerd Font:Regular:16.0" \
                          label.y_offset=-1 \
                          drawing=off \
            --subscribe context_secondary aerospace_workspace_change

sketchybar --add item app_count right \
  --set app_count update_freq=2 script="$PLUGIN_DIR/app_count.sh" \
  background.color=$SURFACE1 \
  background.drawing=on \
  background.height=32 \
  background.corner_radius=0 \
  icon.color=$BLUE \


##### Adding Right Items #####
# In the same way as the left items we can add items to the right side.
# Additional position (e.g. center) are available, see:
# https://felixkratz.github.io/SketchyBar/config/items#adding-items-to-sketchybar

# Some items refresh on a fixed cycle, e.g. the clock runs its script once
# every 10s. Other gititems respond to events they subscribe to, e.g. the
# volume.sh script is only executed once an actual change in system audio
# volume is registered. More info about the event system can be found here:
# https://felixkratz.github.io/SketchyBar/config/events


sketchybar --add item tmux_sessions left --set tmux_sessions update_freq=10 script="$PLUGIN_DIR/tmux.sh" icon.font="FiraCode Nerd Font:Bold:17.0" icon="❯" icon.color=$PEACH label.color=$TEXT background.color=$SURFACE1 background.border_color=$PEACH background.border_width=2 background.corner_radius=0 background.height=32 background.padding_left=5 background.padding_right=5 background.drawing=on width=50 align=center

sketchybar --add item clock right \
  --set clock update_freq=10 script="$PLUGIN_DIR/clock.sh" \
  background.color=$MAROON \
  background.drawing=on \
  background.height=32 \
  background.corner_radius=0 \
  icon.color=$CRUST \
  label.color=$CRUST \


 

  # --add item volume right \
  # --set volume script="$PLUGIN_DIR/volume.sh" \
  # --subscribe volume volume_change \
sketchybar --add item battery right
sketchybar --set battery \
   update_freq=120 \
   script="$PLUGIN_DIR/battery.sh" \
   background.color=$SURFACE1 \
   background.drawing=on \
   background.height=32 \
   background.corner_radius=0 \
   icon.font="FiraCode Nerd Font:Bold:17.0" \
   icon.color=$TEXT \
   label.color=$TEXT \
   width=80 \
   align=center
sketchybar --subscribe battery system_woke power_source_change
sketchybar --add item swap right
sketchybar --set swap \
   update_freq=20 \
   script="$PLUGIN_DIR/memswap.sh" \
   background.color=$SURFACE1 \
   background.drawing=on \
   background.height=32 \
   background.corner_radius=0 \
   icon="" \
   icon.font="FiraCode Nerd Font:Bold:17.0" \
   label.font="FiraCode Nerd Font:Regular:12.0" \
   icon.color=$TEXT \
   label.color=$TEXT \
   width=80 \
   align=center


##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update
